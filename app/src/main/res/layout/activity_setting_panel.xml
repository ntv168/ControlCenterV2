<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    tools:context="center.control.system.vash.controlcenter.panel.SettingPanel">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/btnHouseMode"
            android:onClick="clicktoControlPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhà tôi" />

        <Button
            android:id="@+id/btnHousePanel"
            android:onClick="clicktoModePanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chế độ" />

        <Button
            android:id="@+id/btnConfig"
            android:onClick="clicktoSettingPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorActive"
            android:text="Cài đặt" />

        <Button
            android:id="@+id/btnVoice"
            android:onClick="clicktoVAPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gọi quản gia" />
    </LinearLayout>


</LinearLayout>
