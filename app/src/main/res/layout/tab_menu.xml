<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_menu"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/tabBtnHome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"

            android:elevation="0dp"
            android:onClick="clicktoControlPanel"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tab_home" />

        <ImageButton
            android:id="@+id/tabBtnMode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="clicktoModePanel"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tab_mode" />

        <ImageButton
            android:id="@+id/tabBtnSetting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="clicktoSettingPanel"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tab_setting" />

        <ImageButton
            android:id="@+id/tabBtnVA"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="clicktoVAPanel"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tab_voice" />
    </LinearLayout>
</LinearLayout>