<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="10dp"
android:weightSum="10"
android:gravity="center"
android:padding="10dp"
android:background="@drawable/background_white">

    <LinearLayout
        android:id="@+id/lnMode"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="8.5"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/scriptName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="Thức dậy buổi sáng"
            android:textColor="@color/nDarkGray"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1.5"
        android:background="@drawable/background_mode_play"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/btnActiveScript"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/icn_run"
            android:tint="@color/nGreen1" />
    </LinearLayout>
</LinearLayout>