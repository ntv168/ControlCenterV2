<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/half_body_height"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="15dp"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/device_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/paper_shadow"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/deviceIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:layout_weight=".4"
            android:paddingBottom="0dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/bell" />

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="Đèn chính 1 phòng khách"
            android:textAlignment="center"
            android:textColor="@color/colorActive"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:background="@drawable/card_status_name">

            <TextView
                android:id="@+id/deviceStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Đang bật"
                android:textAlignment="center"
                android:textColor="@color/colorActive"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>